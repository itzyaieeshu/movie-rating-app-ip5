<div class="col offset-md-3 col-md-6 mb-5">
    {{#if message}}
    {{> message}}
    {{/if}}
    <form id="signupForm" action="/signup" method="post" novalidate>
         <div>
           {{#if message}}
              <p class="error">{{message}}</p>
          {{/if}}
        </div>

        <div class="form-group">
            <label for="firstNameInput">First name</label>
            <input name="firstName" type="text" class="form-control" id="firstNameInput" required="true"
                {{#if firstName}} value="{{firstName}}" {{/if}}>
             <div class="error" id="firstNameErr"></div>
        </div>

        <div class="form-group">
            <label for="surnameInput">Surname</label>
            <input name="surname" type="text" class="form-control" id="surnameInput" required="true" {{#if surname}}
                value="{{surname}}" {{/if}}>
            <div class="error" id="lastNameErr"></div>
        </div>

        <div class="form-group">
            <label for="emailInput">Email address</label>
            <input name="email" type="email" class="form-control" id="emailInput" required="true" {{#if email}}
                value="{{email}}" {{/if}}>
             <div class="error" id="emailErr"></div>
        </div>

        <div class="form-group">
            <label for="passwordInput">Password</label>
            <input name="password" type="password" class="form-control" id="passwordInput" required="true"
                {{#if password}} value="{{password}}" {{/if}}>
             <div class="error" id="pwdErr"></div>
        </div>

        <div class="form-group mb-4">
            <label for="confirmPasswordInput">Confirm Password</label>
            <input name="confirmPassword" type="password" class="form-control" id="confirmPasswordInput" required="true"
                {{#if confirmPassword}} value="{{confirmPassword}}" {{/if}}>
            <div class="error" id="confirmPwdErr"></div>
        </div>

        <div class="my-3 text-center">
            <button type="submit" class="btn btn-dark">Sign up</button>
        </div>
    </form>

    <div class="my-3 text-center">
        <a class="text-dark" href="/login">Already have an account? Login</a>
    </div>
</div>