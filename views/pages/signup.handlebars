<div class="container">
    <section>
        <div class="col-lg-12 row justify-content-center p-5">
            <div class="col-lg-10 genre-section rounded-lg bg-cs-1">
                <h1 class="font-weight-bold text-center pt-5">SignIn</h1>
                <form id="signupForm" action="/signup" method="post" novalidate>
                    <div class="col-lg-12 row justify-content-center p-5">
                    <div class="col-lg-12 text-center">
                        {{#if message}}
                        <p class="error">{{message}}</p>
                        {{/if}}
                    </div>
                        <div class="col-md-6 p-3">
                            <div class="form-group">
                                <input name="firstname" type="text" placeholder="First name" class="form-control"
                                    id="firstNameInput" required="true" {{#if firstName}} value="{{firstName}}" {{/if}}>
                            </div>
                            <div class="error" id="firstNameErr"></div>
                        </div>

                        <div class="col-md-6 p-3">
                            <div class="form-group">
                                <input name="surname" type="text" placeholder="Last name" class="form-control"
                                    id="surnameInput" required="true" {{#if surname}} value="{{surname}}" {{/if}}>
                            </div>
                            <div class="error" id="lastNameErr"></div>
                        </div>

                        <div class="col-md-12 p-3">
                            <div class="form-group">
                                <input name="email" type="email" placeholder="Email address" class="form-control"
                                    id="emailInput" required="true" {{#if email}} value="{{email}}" {{/if}}>
                            </div>
                            <div class="error" id="emailErr"></div>
                        </div>

                        <div class="col-md-6 p-3">
                            <div class="form-group">
                                <input name="password" type="password" placeholder="Password" class="form-control"
                                    id="passwordInput" required="true" {{#if password}} value="{{password}}" {{/if}}>
                            </div>
                            <div class="error" id="pwdErr"></div>
                        </div>

                        <div class="col-md-6 p-3">
                            <div class="form-group">
                                <input name="confirmPassword" type="password" placeholder="Confirm Passowrd"
                                    class="form-control" id="confirmPasswordInput" required="true" {{#if
                                    confirmPassword}} value="{{confirmPassword}}" {{/if}}>
                            </div>
                            <div class="error" id="confirmPwdErr"></div>
                        </div>

                        <div class="col-lg-12 my-3 text-center">
                            <button type="submit" class="btn btn-primary btn-lg">Sign up</button>
                        </div>
                        <div class="col-lg-12 my-3 text-center">
                            <a class="text-light" href="/login">Already have an account? Login</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>